<div class="container-fluid ">

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Valor</th>
                <th>Talla</th>
                <th>Fecha de creaci√≥n</th>
                <th>Colores</th>
            </tr>
        </thead>
        <tbody>
            <% arrRopa.forEach((ropa)=> { %>
                <tr>
                    <td>
                        <%= ropa.id %>
                    </td>
                    <td>
                        <%= ropa.name %>
                    </td>
                    <td>
                        <%= ropa.precio %>
                    </td>
                    <td>
                        <%= ropa.talla %>
                    </td>
                    <td>
                        <%= ropa.createdAt.toLocaleDateString('en-US') %>
                    </td>
                    <td>
                        <% ropa.colors.forEach((color)=> { %>
                            <%= color.nombre %>
                        <% }); %>
                    </td>
                    
                </tr>
                <% }); %>
        </tbody>
    </table>
</div>